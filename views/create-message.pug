extends layout 


block content 
    main
        h1 Create Message

        form(method="POST" action="")
            .form-group 
                if (errors.title)
                    p= errors.title.msg
                label(for='title') Title:
                input#title(type='text' required='true'  placeholder='Title...' name='title' value=(undefined===titleText ? '' : titleText))
            .form-group 
                if (errors.text)
                    p= errors.text.msg
                label(for='text') Text:
                textarea#text(name='text' required='true' rows='5' cols='30' value=(undefined===text ? '' : text ))   
            button.btn-submit(type='submit') Create Message    