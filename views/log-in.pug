extends layout 

block content 
    main
        h1 Log in

        form(method='POST' action='')
            .form-group
                label(for='username') Username:
                input#username(type='text' placeholder='johndoe123' name='username')

            .form-group
                label(for='password') Password:
                input#password(type='password' placeholder='••••••••' name='password')
